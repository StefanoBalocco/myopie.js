{
  "name": "myopie.js",
  "description": "View in MVC, but without foresight",
  "exports": "./myopie.min.js",
  "types": "myopie.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/StefanoBalocco/myopie.js.git"
  },
  "version": "0.6.3",
  "keywords": [
    "MVC"
  ],
  "author": "Stefano Balocco <stefano.balocco@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StefanoBalocco/myopie.js/issues"
  },
  "homepage": "https://github.com/StefanoBalocco/myopie.js",
  "scripts": {
    "build": "npm run build:library && npm run build:tests",
    "build:library": "node_modules/typescript/bin/tsc && node_modules/terser/bin/terser myopie.js -o myopie.min.js -m --toplevel -c --mangle-props regex=/^_/",
    "build:tests": "node_modules/typescript/bin/tsc -p tsconfig.tests.json",
    "run:tests": "npx ava *.test.js --verbose"
  },
  "devDependencies": {
    "ava": "~6",
    "c8": "~10",
    "jsdom": "~26",
    "terser": "~5",
    "typescript": "~5"
  }
}
